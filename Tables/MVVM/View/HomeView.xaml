<UserControl x:Class="Tables.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tables.MVVM.View"
             xmlns:viewModel="clr-namespace:Tables.MVVM.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">

    <UserControl.DataContext>
        <viewModel:HomeViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                CornerRadius="10"
                Height="200"
                Width="200"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Margin="0,0,50,0"
                Background="#272730"
                BorderThickness="0.5"
                BorderBrush="Black">

            <Grid>
                <Button Content="Create"
                    Name="createButton"
                    FontSize="26"
                    Foreground="White"
                    Style="{StaticResource HomeButtonTheme}"/>

                <Rectangle Width="40"
                           Height="40"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="25 0 0 0">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="/Image/Create.png"
                                    RenderOptions.BitmapScalingMode="Fant"/>
                    </Rectangle.Fill>
                </Rectangle>
            </Grid>

        </Border>

        <Border Grid.Column="1"
                CornerRadius="10"
                Height="200"
                Width="200"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Margin="50,0,0,0"
                Background="#272730"
                BorderThickness="0.5"
                BorderBrush="Black">

            <Grid>
                <Button Content="Open"
                        Name="openButton"
                        FontSize="26"
                        Foreground="White"
                        Command="{Binding OpenFileCommand}"
                        Style="{StaticResource HomeButtonTheme}"/>

                <Rectangle Width="40"
                           Height="40"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="35 0 0 0">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="/Image/Open.png"
                                    RenderOptions.BitmapScalingMode="Fant"/>
                    </Rectangle.Fill>
                </Rectangle>
            </Grid>
        </Border>
    </Grid>
</UserControl>
